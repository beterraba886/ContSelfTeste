@model IEnumerable<ContSelf.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Funcionario" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Atividades)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td class="salario">
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td class="atividade">
                @Html.DisplayFor(modelItem => item.Atividades)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodFuncionario">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodFuncionario">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodFuncionario">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
